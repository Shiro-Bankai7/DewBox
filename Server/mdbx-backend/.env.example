# Server configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database configuration (local example)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=your_password
# DB_NAME=mdbx_database

# Database configuration (hosted example)
DB_HOST=your-railway-host.railway.app
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_railway_password_here
DB_NAME=railway

# JWT configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Paystack configuration (required for payment flows)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here

# Admin user used by ICA routing logic
ADMIN_USER_ID=your_admin_user_id_here

# Contribution business rules
# First N contributions in each month are ICA-only (default: 10)
ICA_ONLY_CONTRIBUTION_LIMIT=10
# Monthly fee deducted on day 1 as a percentage of prior month's ICA+PIGGY total (default: 2)
MONTHLY_FEE_RATE_PERCENT=2

# Twilio configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional Railway-style connection string
# MYSQL_URL=mysql://root:password@host:3306/railway
